<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_height="match_parent"
    tools:context=".ServiceMenu">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"

        android:id="@+id/infoVenus">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Venus Calibration and Instruments"
            android:textColor="#4D006A"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_marginTop="10dp"
        android:id="@+id/infoHiTech">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hi Tech Calibration Service"
            android:textColor="#4D006A"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/infoMacro">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Macro Services"
            android:textColor="#4D006A"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/infoTrue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="True Value Services"
            android:textColor="#4D006A"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>